{
  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": [
        "@modelcontextprotocol/server-filesystem",
        "~/Documents"
      ],
      "env": {
        "FILESYSTEM_ALLOWED_PATHS": "~/Documents"
      }
    },
    "supabase": {
      "command": "npx",
      "args": [
        "@modelcontextprotocol/server-supabase"
      ],
      "env": {
        "SUPABASE_URL": "https://YOUR_PROJECT_ID.supabase.co",
        "SUPABASE_ANON_KEY": "YOUR_ANON_KEY_HERE"
      }
    }
  }
}